<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.impler.wechat.mrgfnr.dao.MrgFnrEventDao">
	
	<resultMap type="MrgFnrEvent" id="event">
		<id column="id" property="id"/>
		<result column="user_id" property="userId"/>
		<result column="name" property="name"/>
		<result column="type" property="type"/>
		<result column="date" property="date"/>
		<result column="fee" property="fee"/>
		<result column="create_time" property="createTime"/>
		<result column="last_update_time" property="lastUpdateTime"/>
	</resultMap>
	
	<select id="queryInPagination" resultMap="event">
		SELECT USER_ID, NAME, TYPE, DATE, FEE, CREATE_TIME, LAST_UPDATE_TIME FROM T_WECHAT_MRGFNR
	</select>
	
	<select id="count" resultType="int">
		SELECT COUNT(1) FROM T_WECHAT_MRGFNR
	</select>
</mapper>

